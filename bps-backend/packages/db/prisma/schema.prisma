generator client {
    provider = "prisma-client"
    output   = "../src/generated/prisma"
}

datasource db {
    provider = "postgresql"
}

model User {
    id            String    @id @unique @default(cuid())
    username      String    @unique
    password_hash String
    email         String    @unique
    role          Role      @default(USER)
    created_at    DateTime  @default(now())
    updated_at    DateTime  @updatedAt
    deleted_at    DateTime?

    // user wearing an avatar
    avatar_id String?
    avatar    Avatar? @relation("UserWearingAvatar", fields: [avatar_id], references: [id])

    // user (admin) creating an avatar
    created_avatars Avatar[] @relation("AvatarCreator")

    refresh_tokens RefreshToken[]

    elements Element[] @relation("ElementCreator")

    @@index([role, deleted_at])
}

model RefreshToken {
    id         String @id @unique @default(cuid())
    token_hash String @unique

    user_id String?

    created_at   DateTime  @default(now())
    expires_at   DateTime
    revoked_at   DateTime?
    last_used_at DateTime  @updatedAt
    user_agent   String?

    user User? @relation(fields: [user_id], references: [id], onDelete: SetNull)

    @@index([user_id])
    @@index([expires_at])
}

model Avatar {
    id         String    @id @unique @default(cuid())
    name       String
    image_key  String    @unique
    created_at DateTime  @default(now())
    updated_at DateTime  @default(now()) @updatedAt
    deleted_at DateTime?

    // users WEARING this guy
    users User[] @relation("UserWearingAvatar")

    // the guy who CREATED this
    user_id    String?
    created_by User?   @relation("AvatarCreator", fields: [user_id], references: [id], onDelete: SetNull)

    @@index([image_key])
}

enum Role {
    ADMIN
    USER
}

model Element {
    id        String  @id @unique @default(cuid())
    name      String
    image_key String
    static    Boolean

    created_at DateTime @default(now())
    updated_at DateTime @updatedAt

    user_id    String?
    created_by User?   @relation("ElementCreator", fields: [user_id], references: [id], onDelete: SetNull)
}
