generator client {
    provider = "prisma-client"
    output   = "../src/generated/prisma"
}

datasource db {
    provider = "postgresql"
}

// Helper table that keeps track of system generated handles
model HandleSequence{
    base_name String @id
    count Int
}

model User {
    id String @id @unique @default(cuid())
    name String
    handle String @unique
    password_hash String
    email String @unique
    role Role @default(USER)
    created_at DateTime @default(now())
    updated_at DateTime @updatedAt
    deleted_at DateTime?

    // user wearing an avatar
    avatar_id String?
    avatar Avatar? @relation("UserWearingAvatar", fields: [avatar_id], references: [id])

    // user (admin) creating an avatar
    created_avatars Avatar[] @relation("AvatarCreator")

    // All the tokens created by the user
    refresh_tokens RefreshToken[] @relation("DevicesSignedIn")

    // Elements created by admin
    elements Element[] @relation("ElementCreator")

    // Maps created by admin
    maps Map[] @relation("MapCreator")

    @@index([role, deleted_at])
}

model RefreshToken {
    id         String @id @unique @default(cuid())
    token_hash String @unique

    user_id String?

    created_at   DateTime  @default(now())
    expires_at   DateTime
    revoked_at   DateTime?
    last_used_at DateTime  @updatedAt
    user_agent   String?

    user User? @relation("DevicesSignedIn", fields: [user_id], references: [id], onDelete: SetNull)

    @@index([user_id])
    @@index([expires_at])
}

model Avatar {
    id         String    @id @unique @default(cuid())
    name       String
    image_key  String    @unique
    created_at DateTime  @default(now())
    updated_at DateTime  @default(now()) @updatedAt
    deleted_at DateTime?

    // users WEARING this guy
    users User[] @relation("UserWearingAvatar")

    // the guy who CREATED this
    user_id    String?
    created_by User?   @relation("AvatarCreator", fields: [user_id], references: [id], onDelete: SetNull)

    @@index([image_key])
}

enum Role {
    ADMIN
    USER
}

model Element {
    id String @id @unique @default(cuid())
    name String
    image_key String
    height Int
    width Int
    static Boolean

    created_at DateTime @default(now())
    updated_at DateTime @updatedAt
    deleted_at DateTime?

    // creator of this model
    user_id String?
    created_by User? @relation("ElementCreator", fields: [user_id], references: [id], onDelete: SetNull)

    // which maps does this element are defaulted to
    default_to_maps MapElementPlacement[]

    @@unique([image_key, static])
}

model Map {
    id String  @id @unique @default(cuid())
    name String
    height Int
    width Int
    thumbnail_key String

    created_at DateTime @default(now())
    updated_at DateTime @updatedAt
    deleted_at DateTime?

    // Who created me bRO?
    user_id String?
    created_by User? @relation("MapCreator", fields: [user_id], references: [id], onDelete: SetNull)

    // elements in this map
    default_elements MapElementPlacement[]
}

model MapElementPlacement {
    id String @id @unique @default(cuid())

    // the map this guy is related to
    map_id String?
    map Map? @relation(fields: [map_id], references: [id], onDelete: SetNull)

    // the element on this map
    element_id String?
    element Element? @relation(fields: [element_id], references: [id], onDelete: SetNull)

    x Int
    y Int
    scale Float @default(1)
    rotation Float @default(0)
    
    @@index([map_id])
}
