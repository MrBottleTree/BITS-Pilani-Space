generator client {
    provider = "prisma-client"
    output   = "../src/generated/prisma"
}

datasource db {
    provider = "postgresql"
}

model User {
    id            String         @id @unique @default(cuid())
    username      String         @unique
    password_hash String
    email         String         @unique
    role          Role           @default(USER)
    created_at    DateTime       @default(now())
    updated_at    DateTime       @default(now())
    deleted_at    DateTime?

    // user wearing an avatar
    avatarId      String?
    avatar        Avatar?        @relation("UserWearingAvatar", fields: [avatarId], references: [id])

    // user (admin) creating an avatar
    createdAvatars Avatar[]      @relation("AvatarCreator")

    refreshTokens RefreshToken[]
}

model RefreshToken {
    id           String    @id @unique @default(cuid())
    token_hash   String    @unique
    userId       String
    created_at   DateTime  @default(now())
    expires_at   DateTime
    revoked_at   DateTime?
    last_used_at DateTime  @updatedAt
    user_agent   String?
    user         User      @relation(fields: [userId], references: [id])
}

model Avatar {
    id         String   @id @unique @default(cuid())
    name       String
    imageURL   String
    created_at DateTime @default(now())
    updated_at DateTime @default(now()) @updatedAt

    // users WEARING this guy
    users      User[]   @relation("UserWearingAvatar")

    // the guy who CREATED this
    userId     String?
    created_by User?    @relation("AvatarCreator", fields: [userId], references: [id], onDelete: SetNull)
}

enum Role {
    ADMIN
    USER
}